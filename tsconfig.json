{
    "extends": "@react-native/typescript-config/tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@screens/*": ["src/screens/*"],
            "@constants/*": ["src/constants/*"],
            "@domain/*": ["src/domain/*"],
            "@types/*": ["src/types/*"],
            "@store/*": ["src/store/*"],
            "@hoc/*": ["src/hoc/*"],
            "@hooks/*": ["src/hooks/*"],
            "@mock/*": ["src/mock/*"]
        },
        "moduleSuffixes": [".android", ".ios", ".native", ""]
    }
}
